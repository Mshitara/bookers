<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<div class="container">
	<%= render "layouts/header"%>
		<div class="row main">
			<div class="col-xs-3">
				<h2> Editing Book</h2>
			</div>
			<div class="col-xs-9">
				<%= form_for(@book, url: book_path) do |f| %>
					<h4> Title</h4>
					<%= f.text_field :title %>

					<h4> Opinion</h4>
					<%= f.text_area :opinion %>

					<%= f.submit "update book"%>
				<% end %>
			</div>
		</div>
	</div>
</body>
</html>