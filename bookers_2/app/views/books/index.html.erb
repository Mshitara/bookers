<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<div class="container">
		<%= render 'layouts/header'%>
		<div class="row main">
			<div class="col-xs-3">
				<h2> User info</h2>
				<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", class: "no_image"%>
				<table class="table">
					<thead>
						<tr>
							<th>Name</th>
							<th><%= @user.name %></th>
						</tr>
					</thead>
						<tbody>
							<tr>
								<td>Introduction</td>
								<td><%= @user.introduction %></td>
							</tr>
						</tbody>
				</table>
				<%= link_to "", edit_user_path(@user.id), class: "fa fa-wrench col-xs-12 btn btn-default"%>
				<h2> New book</h2>
				<%= form_for @book, url: books_path do |f| %>
					<h4> Title</h4>
					<%= f.text_field :title %>

					<h4> Opinion</h4>
					<%= f.text_area :opinion %>

					<%= f.submit "create book"%>
				<% end %>
			</div>
			<div class="col-xs-9">
				<h2> All Books</h2>
				<table class="table">
					<thead>
						<tr>
							<th> </th>
							<th> Title</th>
							<th> Opinion</th>
						</tr>
					</thead>
					<% @book_index.each do |book_index| %>
					<tbody>
						<tr>
							<td> <%= link_to user_path(@user.id) do %>
									<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", class: "no_image_book"%>
								<% end %>
							</td>
							<td> <%= link_to book_path(book_index.id) do %>
									<%= book_index.title%>
								<% end %>
							</td>
							<td> <%= book_index.opinion%></td>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</body>
</html>