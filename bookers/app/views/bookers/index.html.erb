<h2> Books</h2>
<% if flash[:notice] %>
	<%= flash[:notice] %>
<% end %>
	<table>
		<thead>
			<tr>
				<th> Title</th>
				<th> Note</th>
			</tr>
		</thead>
<% @books.each do |book| %>
		<tbody>
			<tr>
				<td> <%= book.title %></td>
				<td> <%= book.memo %></td>
				<td> <%= link_to "show", show_path(book.id) %></td>
				<td> <%= link_to "edit", edit_path(book.id) %></td>
				<td> <%= link_to "destory", destroy_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
			</tr>
		</tbody>
<% end %>
	</table>
<h2> New book</h2>
<%= form_for @book,:url => {:action => :create} do |f| %>
	<h4> Title</h4>
	<%= f.text_field :title %>

	<h4> Memo</h4>
	<%= f.text_area :memo %>

	<%= f.submit 'create book' %>
<% end %>